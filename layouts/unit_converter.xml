<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/gradient">

<Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/spinner_unit_converter"
    android:background="@null"
    android:layout_marginTop="30sp"
    android:layout_marginLeft="20sp"
    />
<EditText
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40sp"
    android:textSize="20sp"
    android:textColor="#FFFFFF"
    android:layout_below="@+id/spinner_unit_converter"
    android:layout_marginTop="30sp"
    android:hint="Value"
    android:id="@+id/input"
    android:textColorHint="#FFFFFF"
    android:textCursorDrawable="@null"
    android:backgroundTint="#FFFFFF"
    android:inputType="numberDecimal" /> <!-- or width = wrap content -->
<Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:id="@+id/left_side_uc"
    android:layout_below="@+id/input"
    android:layout_toLeftOf="@+id/to"
    android:layout_marginTop="30sp"
    android:layout_marginRight="40sp"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/input"
    android:layout_marginTop="30sp"
    android:text="to"
    android:id="@+id/to"
    android:textSize="20sp"
    android:textColor="#FFFFFF"/>
<Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:layout_below="@+id/input"
    android:layout_marginTop="30sp"
    android:layout_toRightOf="@+id/to"
    android:id="@+id/right_side_uc"
    android:layout_marginLeft="40sp"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/spinner_unit_converter"
    android:layout_marginTop="40sp"
    android:textSize="20sp"
    android:id="@+id/output"
    android:textColor="#FFFFFF"
    android:textColorHint="#FFFFFF"
    android:layout_toRightOf="@+id/to"
    android:layout_marginLeft="40sp"
    android:hint="Output"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Convert"
    android:id="@+id/convert"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:textSize="20sp" />
</RelativeLayout>